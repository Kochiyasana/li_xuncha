<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="p03.example.li.xuncha.MainActivity"
    tools:showIn="@layout/app_bar_main"
    >
    <ImageView
        android:id="@+id/image_saoyisao"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/saoyisao"/>
    <TextView
        android:layout_below="@+id/image_saoyisao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击按钮添加巡查记录"
        android:layout_marginTop="30dp"
        android:textColor="@color/album_White"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/button_tianjia"
        android:layout_below="@+id/image_saoyisao"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="@dimen/album_dp_6"
        android:layout_marginRight="@dimen/album_dp_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加巡查"
        android:textSize="20dp"
        android:textColor="@color/album_White"
        android:background="@drawable/butt"/>

</RelativeLayout>
